/* pages/wallet/wallet.wxss */
page{
	background-color: #f9f9f9
}
.moneyContainer{
	width: 100%;
	height: 320rpx;
	background-color: #FFFFF0;
	display: flex;
	text-align: center;
	flex-direction: column;
	justify-content: center;
}
.moneyNumber{
	color: #FF8C00;
	font-size: 40px;
}
.inMoneyDetail{
	font-size: 14px;
	margin:0px auto;
	width: 150px;
	line-height: 30px;
	height: 30px;
	border: 1px solid #CDC9C9;
	border-radius: 15px;
}

.chooseMoney{
	display: flex;
	flex-direction: row;
	align-items: center;
}
.chooseMoney button{
	width: 80px;
	height: 80px;
	line-height: 80px;
	text-align: center;
	margin:10px 10px;
	flex: 1;
	border: 1px solid #D3D3D3;
	font-size: 24px;
}
.choosed{
	color:#179B16;
	border: 1px solid #179B16!important;
}
button{
	margin: 0 auto;
    width: 80%;
}